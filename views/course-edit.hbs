<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">

    <div class="input-field">
          <input placeholder="Course title" id="title" name="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Course title:</label>
          <span class="helper-text" data-error="Add course title"></span>
    </div>

    <div class="input-field">
          <input placeholder="Course price" id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Course price:</label>
          <span class="helper-text" data-error="Add course price"></span>
    </div>

    <div class="input-field">
          <input placeholder="URL of image" id="img" name="img" type="text" class="validate" required value="{{course.img}}">
          <label for="price">Course image:</label>
          <span class="helper-text" data-error="Add course image URL"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Edit course</button>
    
</form>

<form action="/courses/remove" method="post">
      <input type="hidden" name="id" value="{{course.id}}">
      <button class="btn red">Delete course</button>
</form>